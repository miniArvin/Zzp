<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_head_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/view_head_back"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:padding="14dp"
            android:src="@drawable/left_icon" />

        <TextView
            android:id="@+id/view_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/home_location_word" />

        <ImageView
            android:id="@+id/view_head_share"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/view_head_collect"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/view_head_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/home_location_word"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/mine_div"
        android:visibility="gone" />
</LinearLayout>