<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tryine.zzp.ui.activity.mine.invoice.CommonInvoiceTemplateActivity">

    <include layout="@layout/view_head_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:gravity="center|left"
        android:text="发票信息"
        android:textColor="@color/home_check_in_word"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="发票抬头"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/home_location_btn" />

        <EditText
            android:id="@+id/common_invoice_bill_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mine_title_word"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="纳税人识别码"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/home_location_btn" />


        <EditText
            android:id="@+id/common_invoice_tax_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mine_title_word"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="统一社会信用代码"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/home_location_btn" />

        <EditText
            android:id="@+id/common_invoice_credit_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:textColor="@color/mine_title_word"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="开户行"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/common_invoice_bank_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:textColor="@color/mine_title_word"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="开户行账号"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/common_invoice_card_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mine_title_word"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="接收邮箱"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/home_location_btn" />

        <EditText
            android:id="@+id/common_invoice_email_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mine_title_word"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="公司电话"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/home_location_btn" />

        <EditText
            android:id="@+id/common_invoice_tell_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mine_title_word"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="公司地址"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/home_location_btn" />

        <EditText
            android:id="@+id/common_invoice_address_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mine_title_word"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:gravity="center|left"
        android:textColor="@color/home_check_in_word"
        android:textSize="14sp"
        android:text="收件信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="收件人"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/home_location_btn" />

        <EditText
            android:id="@+id/common_invoice_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mine_title_word"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/home_location_btn" />

        <EditText
            android:id="@+id/common_invoice_mobile_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mine_title_word"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:inputType="phone"
            android:textSize="16sp"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_invoice_address_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="配送地址"
            android:textColor="@color/mine_commission_word"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/home_location_btn" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_invoice_province_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="湖南省"
                android:textColor="@color/mine_title_word"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_invoice_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="长沙市"
                android:textColor="@color/mine_title_word"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_invoice_district_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="岳麓区"
                android:textColor="@color/mine_title_word"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/common_invoice_detail_address_et"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/invoice_detailed_address_bg"
        android:gravity="top"
        android:textColorHint="@color/hotel_search_word"
        android:hint="  输入详细配送地址" />
    <TextView
        android:id="@+id/common_invoice_save_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_bg_btn"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:clickable="true"/>

</LinearLayout>