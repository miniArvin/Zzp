<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tryine.zzp.ui.fragment.order.ZZPOrderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zzp_order_pay_tv"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:text="待付款(02)"
            android:textColor="@color/orange"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/all_order"/>
        <TextView
            android:id="@+id/zzp_order_stay_tv"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:textColor="@color/home_city_name_word"
            android:text="待入住(14)"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:textColor="@color/home_city_name_word"
            android:id="@+id/zzp_order_comment_tv"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:text="待点评(01)"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_div" />

    <ListView
        android:id="@+id/zzp_order_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/mine_div"
        android:dividerHeight="1dp"></ListView>

</LinearLayout>
