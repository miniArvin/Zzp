<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/mine_collect_unselected_icon" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:src="@drawable/mine_collect_article_bg_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center|left"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="徒步上山寻找儿时的记忆，记忆中的芒草超美！"
            android:textColor="@color/home_location_word"
            android:textSize="16sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布于2017-09-31"
            android:textSize="12sp"
            android:textColor="@color/home_recommend_location_word"
            android:layout_marginTop="9dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收藏于一天前"
            android:textSize="12sp"
            android:textColor="@color/all_order_default_word"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>
