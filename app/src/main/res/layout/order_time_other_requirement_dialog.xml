<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="其他需求"
            android:textColor="@color/home_location_word"
            android:textSize="21sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="需求"
                android:textColor="@color/home_location_word"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/order_time_requirement_dialog_selected_icon"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="不需求"
                android:textColor="@color/home_location_word"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/order_time_requirement_dialog_unselected_icon"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="18dp"
            android:background="@color/found_search_bg"
            android:hint="其他需求（您的需求会尽量转达给酒店，但不保证一定实现）"
            android:textColor="@color/home_check_in_word"
            android:textSize="14sp"
            android:gravity="top"
            android:padding="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="57dp"
                android:layout_height="30dp"
                android:text="有窗"
                android:textColor="@color/home_location_btn"
                android:background="@drawable/login_bg_look"
                android:gravity="center"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="57dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="安静"
                android:gravity="center"
                android:textColor="@color/order_cash_pledge_word"
                android:background="@drawable/other_requirement_dialog_border_gray"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="57dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="高层"
                android:gravity="center"
                android:textColor="@color/order_cash_pledge_word"
                android:background="@drawable/other_requirement_dialog_border_gray"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="57dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="安静"
                android:gravity="center"
                android:textColor="@color/order_cash_pledge_word"
                android:background="@drawable/other_requirement_dialog_border_gray"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginTop="27dp"
        android:textSize="17sp"
        android:background="@color/home_location_btn"
        android:textColor="@color/white"
        android:text="确定"/>


</LinearLayout>
