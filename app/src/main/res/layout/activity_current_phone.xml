<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tryine.zzp.ui.activity.mine.securityCenter.resetPhoneNumber.CurrentPhoneActivity">

    <include layout="@layout/view_head_back"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:text="当前绑定手机号"
        android:textSize="13sp"
        android:textColor="@color/equipment_content_word"/>

    <TextView
        android:id="@+id/current_phone_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="@color/mine_title_word"/>

    <TextView
        android:id="@+id/change_phone_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:text="更换手机号"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:background="@drawable/login_bg_btn"
        android:gravity="center"/>
</LinearLayout>
