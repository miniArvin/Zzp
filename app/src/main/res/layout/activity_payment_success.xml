<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity=""
    tools:context="com.tryine.zzp.ui.activity.mine.order.order_time.PaymentSuccessActivity">
    <include layout="@layout/view_head_back"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="78dp"
        android:layout_gravity="center"
        android:src="@drawable/order_time_success_bg_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/home_location_btn"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:text="￥188.00"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付成功，等待酒店确认"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@color/home_recommend_location_word"/>
    <TextView
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:text="继续预定"
        android:background="@drawable/login_bg_btn"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="继续预定"
        android:background="@drawable/login_bg_look"
        android:textColor="@color/orange"
        android:textSize="17sp"
        android:gravity="center"/>
</LinearLayout>
