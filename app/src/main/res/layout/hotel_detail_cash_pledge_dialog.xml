<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/item_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="67dp"
                android:layout_gravity="center"
                android:text="提示"
                android:textColor="@color/home_location_btn"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需要提交"
                    android:textColor="@color/home_location_word"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥200"
                    android:textColor="@color/home_location_btn"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="押金才能下单"
                    android:textColor="@color/home_location_word"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★押金只是交易的保障，去会员中心"
                    android:textColor="@color/hotel_detail_cash_pledge_word"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="随时退还"
                    android:textColor="@color/hotel_detail_cash_pledge_word"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:layout_width="92dp"
                android:layout_height="37dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/hotel_detail_cash_pledge_bg_btn"
                android:textSize="17sp"
                android:gravity="center"
                android:text="交押金"/>
        </LinearLayout>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hotel_cash_pledge_dialog_bg_icon"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/hotel_detail_pai_close_icon"/>

</LinearLayout>
