<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tryine.zzp.ui.activity.mine.distribution.DistributionCenterActivity">

    <include layout="@layout/view_head_back" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/home_location_btn"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/distribution_center_img_headimg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fenghuanggucheng"
                        app:civ_border_color="#00ffffff"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="19dp"
                        android:layout_alignBottom="@+id/distribution_center_img_headimg"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/mine_qian_dao_bg_white"
                        android:gravity="center"
                        android:text="昨日￥12.5"
                        android:textColor="@color/mine_title_word"
                        android:textSize="11sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/distribution_center_commission_ll"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="佣金总额"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="￥11.2"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/distribution_center_member_ll"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的会员"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="4dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="NEW"
                            android:textColor="@color/orange"
                            android:textSize="9sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/found_search_bg" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/distribution_center_left_bg_icon" />
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/distribution_center_right_bg_icon" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="分享好友获得佣金"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="@color/mine_title_word"/>
            </RelativeLayout>


            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/distribution_center_2core_icon" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/distribution_center_share_icon"
                android:gravity="center"
                android:text="分享二维码"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="最新分销订单"
                    android:textColor="@color/mine_title_word"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/distribution_center_all_order_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:text="查看全部"
                    android:textColor="@color/equipment_content_word"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/more_right_icon" />
            </RelativeLayout>

            <com.tryine.zzp.widget.NoScrollListView
                android:id="@+id/distribution_center_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="15dp"></com.tryine.zzp.widget.NoScrollListView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
