<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/order_item_bg"
    tools:context="com.tryine.zzp.ui.fragment.OrderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/order_service_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:text="客服"
                android:textColor="@color/home_location_word"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/order_all_order_icon" />

            <TextView
                android:id="@+id/order_all_order_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全部订单"
                android:textColor="@color/home_location_word"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:paddingLeft="85dp"
        android:paddingRight="85dp"
        android:background="@color/white">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/order_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"></net.lucode.hackware.magicindicator.MagicIndicator>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="下单后可以在这里"
            android:textColor="@color/home_city_name_word"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="管理你的行程"
            android:textSize="18sp"
            android:textColor="@color/home_city_name_word"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:layout_width="260dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:src="@drawable/order_empty_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="去看看哪里好玩吧"
            android:textSize="13sp"
            android:textColor="@color/mine_title_word" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/login_bg_btn"
            android:gravity="center"
            android:text="开始旅行"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <com.tryine.zzp.widget.NoScrollViewPager
        android:id="@+id/order_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></com.tryine.zzp.widget.NoScrollViewPager>


</LinearLayout>
