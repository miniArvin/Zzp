<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/location_name_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/found_location_icon"/>

    <TextView
        android:id="@+id/location_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/home_city_name_word"
        android:text="张家界"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/location_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="奇山、奇石、玻璃桥"
        android:textColor="@color/home_recommend_location_word"
        android:textSize="13sp"/>

</LinearLayout>