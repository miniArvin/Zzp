<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tryine.zzp.ui.activity.mine.collect.MyCollectActivity">

    <include layout="@layout/view_head_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mine_collect_hotel_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_collect_hotel_tv"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="酒店"
                android:textColor="@color/orange" />

            <View
                android:id="@+id/mine_collect_hotel_v"
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@color/orange"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_collect_article_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_collect_article_tv"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="文章"
                android:textColor="@color/black" />

            <View
                android:id="@+id/mine_collect_article_v"
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="@color/orange"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_collect_good_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_collect_good_tv"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="商品"
                android:textColor="@color/black" />

            <View
                android:id="@+id/mine_collect_good_v"
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@color/orange"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/mine_collect_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
