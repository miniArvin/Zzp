<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#00ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/item_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/cash_pledge_dialog_title_bg_gray"
            android:gravity="center"
            android:text="申请押金退还"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="确定要退还押金吗？"
            android:textColor="@color/home_location_word"
            android:textSize="19sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/home_check_in_word"
            android:text="退还押金将不能享受拍房服务，申请成功后" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/home_check_in_word"
            android:text="押金会在5-7个工作日内退还" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="43dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/cash_pledge_dialog_bg_gray"
            android:text="确定"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/cash_pledge_dialog_bg"
            android:textSize="18sp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/cash_pledge_dialog_border_gray"/>
    </LinearLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/hotel_detail_pai_close_icon"/>
</LinearLayout>
