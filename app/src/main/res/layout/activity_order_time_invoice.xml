<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tryine.zzp.ui.activity.mine.order.order_time.OrderTimeInvoiceActivity">

    <include layout="@layout/view_head_back" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="需要发票"
                    android:textColor="@color/home_location_word"
                    android:textSize="16sp" />

                <com.tryine.zzp.widget.SwitchButton
                    android:id="@+id/hotel_order_invoice_need_invoice_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:sb_checked="true"
                    app:sb_show_indicator="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/mine_div" />

            <LinearLayout
                android:id="@+id/order_time_invoice_is_need_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/found_search_bg"
                    android:paddingTop="8dp"
                    android:text="掌中拍平台目前只提供电子发票，如需要纸质发票请联系客服！"
                    android:textColor="@color/home_check_in_word"
                    android:textSize="13sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/mine_div" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="发票类型"
                        android:textColor="@color/order_cash_pledge_word"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/order_time_invoice_common_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/order_time_invoice_common_iv"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/mine_collect_selected_icon" />

                        <TextView
                            android:id="@+id/order_time_invoice_common_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="普通发票"
                            android:textColor="@color/order_title_word"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_time_invoice_VAT_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/order_time_invoice_VAT_iv"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/mine_collect_unselected_icon" />

                        <TextView
                            android:id="@+id/order_time_invoice_VAT_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="增值税专业发票"
                            android:textColor="@color/home_location_word"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/mine_div" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开票方"
                        android:textColor="@color/order_cash_pledge_word"
                        android:textSize="16sp" />


                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/login_bg_code"
                        android:gravity="center"
                        android:text="平台"
                        android:textColor="@color/home_location_word"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/mine_div" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发票抬头"
                        android:textColor="@color/order_cash_pledge_word"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/home_location_btn" />


                    <EditText
                        android:id="@+id/order_time_invoice_title_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center|end"
                        android:textColor="@color/mine_title_word"
                        android:singleLine="true"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/mine_div" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="纳税人识别码"
                        android:textColor="@color/order_cash_pledge_word"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/home_location_btn" />

                    <EditText
                        android:id="@+id/order_time_invoice_TRN_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center|end"
                        android:textColor="@color/mine_title_word"
                        android:singleLine="true"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/mine_div" />

                <LinearLayout
                    android:id="@+id/order_time_invoice_VAT_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="统一社会信用代码"
                            android:textColor="@color/order_cash_pledge_word"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/home_location_btn" />

                        <EditText
                            android:id="@+id/order_time_invoice_USCC_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center|end"
                            android:textColor="@color/mine_title_word"
                            android:singleLine="true"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/mine_div" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开户行"
                            android:textColor="@color/order_cash_pledge_word"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/home_location_btn" />

                        <EditText
                            android:id="@+id/order_time_invoice_opening_bank_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center|end"
                            android:textColor="@color/mine_title_word"
                            android:singleLine="true"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/mine_div" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开户行账号"
                            android:textColor="@color/order_cash_pledge_word"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/home_location_btn" />

                        <EditText
                            android:id="@+id/order_time_invoice_opening_account_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center|end"
                            android:textColor="@color/mine_title_word"
                            android:singleLine="true"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/mine_div" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公司电话"
                            android:textColor="@color/order_cash_pledge_word"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/home_location_btn" />

                        <EditText
                            android:id="@+id/order_time_invoice_tell_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center|end"
                            android:inputType="phone"
                            android:textColor="@color/mine_title_word"
                            android:singleLine="true"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/mine_div" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公司地址"
                            android:textColor="@color/order_cash_pledge_word"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/home_location_btn" />

                        <EditText
                            android:id="@+id/order_time_invoice_address_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center|end"
                            android:textColor="@color/mine_title_word"
                            android:singleLine="true"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/found_search_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="收取方式（备注：纸质发票收取"
                        android:textColor="@color/home_check_in_word"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥10"
                        android:textColor="@color/home_location_btn"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")"
                        android:textColor="@color/home_check_in_word"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/mine_div" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/order_time_invoice_e_btn"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/login_bg_look"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/order_time_invoice_e_iv"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/mine_collect_selected_icon" />

                        <TextView
                            android:id="@+id/order_time_invoice_e_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            android:text="邮箱(电子发票)"
                            android:textColor="@color/orange" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_time_invoice_p_btn"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/hotel_detail_item_man_fang_bg_btn"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/order_time_invoice_p_iv"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/mine_collect_unselected_icon" />

                        <TextView
                            android:id="@+id/order_time_invoice_p_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            android:text="邮箱(纸质发票)"
                            android:textColor="@color/home_location_word"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="@color/found_search_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="收件信息"
                    android:textColor="@color/home_check_in_word"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/order_time_invoice_p_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收件人"
                            android:textColor="@color/order_cash_pledge_word"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/home_location_btn" />

                        <EditText
                            android:id="@+id/order_time_invoice_recipients_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center|end"
                            android:textColor="@color/mine_title_word"
                            android:singleLine="true"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/mine_div" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号码"
                            android:textColor="@color/order_cash_pledge_word"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/home_location_btn" />

                        <EditText
                            android:id="@+id/order_time_invoice_phone_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center|end"
                            android:inputType="phone"
                            android:textColor="@color/mine_title_word"
                            android:singleLine="true"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/mine_div" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="配送地址"
                            android:textColor="@color/order_cash_pledge_word"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/home_location_btn" />

                        <LinearLayout
                            android:id="@+id/order_time_invoice_address_select_ll"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/order_time_invoice_province_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text=""
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:textColor="@color/mine_title_word"
                                    android:textSize="20sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/order_time_invoice_city_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text=""
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:textColor="@color/mine_title_word"
                                    android:textSize="20sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/order_time_invoice_county_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text=""
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:textColor="@color/mine_title_word"
                                    android:textSize="20sp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <EditText
                        android:id="@+id/order_time_invoice_detail_address_et"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/found_search_bg"
                        android:gravity="top"
                        android:hint="输入详细配送地址"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/order_time_invoice_mail_ll"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接收邮箱"
                        android:textColor="@color/order_cash_pledge_word"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/home_location_btn" />

                    <EditText
                        android:id="@+id/order_time_invoice_mail_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center|end"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/mine_title_word"
                        android:singleLine="true"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:background="@color/found_search_bg"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:text="备注：当你此次住宿为出差性质，且出差报销企业为一般纳税人的企业，酒店才可开具增值税专业发票。"
                    android:textColor="@color/home_check_in_word"
                    android:textSize="13sp" />
