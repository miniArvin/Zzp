<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context="com.tryine.zzp.ui.activity.login.LoginActivity">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/login_title_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal"
            android:background="@drawable/login_bg_input">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/login_user_icon" />
            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@color/white"/>

            <EditText
                android:id="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:hint="请输入您的手机号码"
                android:textColorHint="@color/white"
                android:textSize="12sp"
                android:background="@null"
                android:inputType="phone"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/login_bg_input"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/login_password_icon" />
            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@color/white"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="请输入登录密码"
                android:textColorHint="@color/white"
                android:textSize="12sp"
                android:inputType="textPassword"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/login_bg_btn"
            android:gravity="center"
            android:text="登录"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:clickable="true"/>
        
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login_new"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="新用户注册"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:clickable="true"/>
            <TextView
                android:id="@+id/login_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="忘记密码？"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_marginLeft="30dp"
                android:clickable="true"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="36dp"
                android:layout_height="1dp"
                android:background="@drawable/login_bg_input"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="其他账号登录"
                android:textColor="@color/white"
                android:textSize="11sp"/>
            <View
                android:layout_width="36dp"
                android:layout_height="1dp"
                android:background="@drawable/login_bg_input"></View>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_third_wx"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/login_wx_icon"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/login_third_qq"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="43dp"
                android:layout_gravity="center"
                android:src="@drawable/login_qq_icon"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/login_third_wb"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/login_web_icon"
                android:clickable="true"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
